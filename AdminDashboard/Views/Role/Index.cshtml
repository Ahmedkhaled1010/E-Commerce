@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
@if(Model.Count()>0)
{
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(r=>r.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(r => r.Name)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var role in Model)
            {
                 <tr>
                     <td>
                         @role.Id
                     </td>
                    <td>
                        @role.Name
                    </td>
                    <td class="btn btn-outline-warning " asp-action="Edit" asp-route-id="@role.Id">
                         Edit           
                    </td>
                    <td class="btn btn-outline-danger " asp-action="Delete" asp-route-id="@role.Id">
                        Delete
                    </td>
                 </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-2 alert-warning">
        <h2>
            There is No Roles
        </h2>
    </div>
}

